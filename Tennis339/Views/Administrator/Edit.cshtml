@model Tennis339.ViewModels.EditRoleViewModel

@{
    ViewData["title"] = "Edit";
}

<div class="container">
    <h1>Edit Role</h1>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Details">Go back</a>
    </form>

    <div class="box-container">
        <div class="box-header">
            <h1>Users in this Role</h1>
            <hr />
        </div>
        <div class="box-main">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {
                    <h3>@user</h3>
                }
            }
            else
            {
                <h3>No users in this role</h3>
            }
        </div>
        <div class="box-footer">
            <a asp-action="Modify" asp-route-id="@Model.Id" class="btn btn-default">Add/Remove Users from this Role</a>
        </div>
    </div>
</div>